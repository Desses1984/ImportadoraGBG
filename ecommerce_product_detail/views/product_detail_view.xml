<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_detail_form">
        <field name="name">product_detail_form</field>
        <field name="model">product.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title pr-0">
                        <label for='name'>name</label>
                        <h2>
                            <field name="name" required="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_detail_tree" model="ir.ui.view">
        <field name="name">product_detail_tree</field>
        <field name="model">product.detail</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Product Detail">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="action_product_detail" model="ir.actions.act_window">
        <field name="name">Product Detail</field>
        <field name="res_model">product.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a Product Detail 
            </p>
        </field>
    </record>

</odoo>